            <URL value="@style.css"/>
        </stylesheets>

        <GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="" alignment="center" hgap="10" vgap="10">
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Username" styleClass="label"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="textfield"/>
